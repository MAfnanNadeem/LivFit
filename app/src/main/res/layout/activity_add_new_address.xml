<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_app">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1x"
        android:src="@drawable/mibo_livfit_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/addNewCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_2x"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/grid_1x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_2x"
            android:fontFamily="@string/font_sans_serif_black"
            android:text="Add a New Shipping Address"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addNewCard"
        app:layout_constraintWidth_percent="0.7">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_first_name"
            style="@style/login_edittext"
            android:digits="@string/alphabets_only"
            android:hint="@string/full_name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email"
            style="@style/login_edittext"
            android:layout_marginTop="@dimen/grid_1x"
            android:hint="@string/email_hint"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_phone"
            style="@style/login_edittext"
            android:layout_marginTop="@dimen/grid_1x"
            android:hint="Contact Number"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_add1"
            style="@style/login_edittext"
            android:layout_marginTop="@dimen/grid_1x"
            android:ems="11"
            android:hint="Address 1"
            android:lines="3"
            android:inputType="textAutoComplete"
            android:singleLine="false"
            android:textSize="@dimen/text_size_medium" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_add2"
            style="@style/login_edittext"
            android:layout_marginTop="@dimen/grid_1x"
            android:ems="11"
            android:hint="Address 2"
            android:lines="2"
            android:singleLine="false"
            android:textSize="@dimen/text_size_medium" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_city"
            style="@style/login_edittext"
            android:layout_marginTop="@dimen/grid_1x"
            android:hint="@string/city_hint"
            android:imeOptions="actionNext"
            android:inputType="textAutoComplete" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_country"
            style="@style/login_edittext"
            android:layout_marginTop="@dimen/grid_1x"
            android:ems="11"
            android:inputType="textAutoComplete"
            android:hint="@string/country_hint"
            android:textSize="@dimen/text_size_medium" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_2x"
        android:background="@drawable/login_button_accent"
        android:text="Save Address"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"

        />


</androidx.constraintlayout.widget.ConstraintLayout>