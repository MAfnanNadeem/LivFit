<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ViewAnimator
            android:id="@+id/viewAnimator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inAnimation="@anim/enter_from_right"
            android:outAnimation="@anim/exit_to_left">

            <include layout="@layout/activity_register_page1" />
            <include layout="@layout/activity_register_page3" />

            <include layout="@layout/activity_register_page2" />
        </ViewAnimator>

    </ScrollView>
</RelativeLayout>