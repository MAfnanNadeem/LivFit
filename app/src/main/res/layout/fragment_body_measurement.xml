<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <life.mibo.views.RxlPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tv_continue"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="@dimen/grid_1x"
        android:padding="@dimen/grid_1x"
        android:background="@color/transparent"
        android:gravity="center"
        android:text="@string/back"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_continue"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/grid_2x"
        android:gravity="center"
        android:text="@string/dialog_continue"
        android:textColor="@color/textColor"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageNext"
        app:layout_constraintEnd_toStartOf="@id/imageNext"
        app:layout_constraintTop_toTopOf="@+id/imageNext" />

    <ImageView
        android:id="@+id/imageNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_2x"
        android:background="@drawable/button_shape_primary"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_forward_24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>