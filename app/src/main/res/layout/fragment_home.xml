            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33" />


        <life.mibo.views.DashboardItem
            android:id="@+id/iv_dashboard_item_4"
            style="@style/dashboard_item"
            app:item_icon="@drawable/ic_dashboard_booster"
            app:item_image="@drawable/dashboard_item_bg_2"
            app:item_text="Title Here"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_dashboard_item_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_dashboard_item_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33" />

        <life.mibo.views.DashboardItem
            android:id="@+id/iv_dashboard_item_5"
            style="@style/dashboard_item"
            app:item_icon="@drawable/ic_dashboard_booster"
            app:item_image="@drawable/dashboard_item_bg_2"
            app:item_gravity="left"
            app:item_text="Title Here"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_dashboard_item_4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.34" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationY="-60dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout3"
        app:layout_constraintWidth_percent="0.66">

        <life.mibo.views.DashboardItem
            android:id="@+id/iv_dashboard_item_6"
            style="@style/dashboard_item"
            app:item_icon="@drawable/ic_dashboard_booster"
            app:item_image="@drawable/dashboard_item_bg_2"
            app:item_text="Title Here"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_dashboard_item_7"
            app:layout_constraintHorizontal_bias="0.5"
            app:item_gravity="right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <life.mibo.views.DashboardItem
            android:id="@+id/iv_dashboard_item_7"
            style="@style/dashboard_item"
            app:item_icon="@drawable/ic_dashboard_booster"
            app:item_image="@drawable/dashboard_item_bg_2"
            app:item_text="Title 2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_dashboard_item_6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:translationY="-92dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout4">

        <life.mibo.views.DashboardItem
            android:id="@+id/iv_dashboard_item_8"
            style="@style/dashboard_item"
            app:item_icon="@drawable/ic_dashboard_booster"
            app:item_image="@drawable/dashboard_item_bg_2"
            app:item_text="Title Here"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_dashboard_item_9"
            app:layout_constraintHorizontal_bias="0.5"
            app:item_gravity="right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33" />


        <life.mibo.views.DashboardItem
            android:id="@+id/iv_dashboard_item_9"
            style="@style/dashboard_item"
            app:item_icon="@drawable/ic_dashboard_booster"
            app:item_image="@drawable/dashboard_item_bg_2"
            app:item_text="Title Here"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_dashboard_item_10"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_dashboard_item_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33" />

        <life.mibo.views.DashboardItem
            android:id="@+id/iv_dashboard_item_10"
            style="@style/dashboard_item"
            app:item_icon="@drawable/ic_dashboard_booster"
            app:item_image="@drawable/dashboard_item_bg_2"
            app:item_text="Title Here"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:item_gravity="left"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_dashboard_item_9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33" />

    </androidx.constraintlayout.widget.ConstraintLayout>

