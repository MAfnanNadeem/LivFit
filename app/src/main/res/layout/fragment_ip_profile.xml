<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_app">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/grid_1x"
        android:layout_marginTop="@dimen/grid_1x"
        android:background="@color/transparent"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:tint="@color/textColor2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/grid_2x"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@id/btn_invite"
        app:layout_constraintTop_toBottomOf="@id/btn_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/constraintLayout1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/userImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_test"
                    app:civ_border_color="@color/grey"
                    app:civ_border_width="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#40ffffff"
                    android:gravity="center"
                    android:padding="@dimen/grid_2x"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/textColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="@string/professional_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1x"
                android:background="@drawable/profile_edittext"
                android:lines="5"
                android:padding="@dimen/grid_2x"
                android:text="Description"
                android:textColor="@color/textColor"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:lines="1"
                android:paddingStart="@dimen/grid_1x"
                android:paddingEnd="@dimen/grid_1x"
                android:text="@string/services"
                android:textColor="@color/textColorApp"
                android:textSize="@dimen/text_size_large" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_service_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:gravity="center"
                android:lines="1"
                android:text="@string/no_data_found"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_large"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:lines="1"
                android:text="@string/specializations"
                android:textColor="@color/textColorApp"
                android:textSize="@dimen/text_size_large" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:paddingStart="@dimen/grid_1x"
                android:paddingEnd="@dimen/grid_1x" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_specialization_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:gravity="center"
                android:lines="1"
                android:text="@string/no_data_found"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_large"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:lines="1"
                android:text="@string/certifications"
                android:textColor="@color/textColorApp"
                android:textSize="@dimen/text_size_large" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:paddingStart="@dimen/grid_1x"
                android:paddingEnd="@dimen/grid_1x" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_certificate_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:gravity="center"
                android:lines="1"
                android:text="@string/no_data_found"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_large"
                android:visibility="gone" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_3x"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <com.dichotome.profilebar.ui.tabPager.TabPager-->
    <!--        android:id="@+id/profilePager"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->


    <Button
        android:id="@+id/btn_invite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_2x"
        android:layout_marginTop="@dimen/grid_2x"
        android:background="@drawable/login_button_primary"
        android:text="@string/invite_me"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>
