    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/CollapsedAppBar"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="@dimen/grid_1x"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="@dimen/grid_2x"
            app:expandedTitleTextAppearance="@style/ExpandAppBar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="@string/rxl_title">

            <life.mibo.hexa.ui.rxl.slider.GiffVideoSlider
                android:id="@+id/giffVideoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="?attr/actionBarSize"
                android:background="@color/white"
                app:layout_collapseMode="parallax"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/simple_drawee_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:layout_collapseMode="parallax"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="1" />

            <!--            <pl.droidsonroids.gif.GifImageView-->
            <!--                android:id="@+id/iv_icon_giff"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:scaleType="centerCrop"-->
            <!--                android:visibility="gone"-->
            <!--                app:layout_collapseMode="parallax"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent"-->
            <!--                app:layout_constraintWidth_percent="1" />-->

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cycle_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/tv_cycle_heading"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cycle_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:text="@string/cycle"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:min="0"
                android:progressDrawable="@drawable/progress_drawables"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_cycle_heading" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/grid_2x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progressBar">


                <ImageView
                    android:id="@+id/iv_players_"
                    style="@style/rxl_create_icon"
                    android:layout_width="40dp"
                    android:src="@drawable/ic_reflex_user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.3" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_players_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_2x"
                    android:text="@string/players"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_players_"
                    app:layout_constraintStart_toEndOf="@+id/iv_players_"
                    app:layout_constraintTop_toTopOf="@+id/iv_players_"
                    app:layout_constraintWidth_percent="1" />


                <life.mibo.views.CircleView
                    android:id="@+id/players_1_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/grid_2x"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_players_" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/players_1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_2x"
                    android:text="Player 1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/players_1_color"
                    app:layout_constraintStart_toEndOf="@+id/players_1_color"
                    app:layout_constraintTop_toTopOf="@id/players_1_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/players_1_pods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableStart="@drawable/ic_rxl_pods_icon"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="@dimen/grid_1x"
                    android:text="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/players_1_color"
                    app:layout_constraintEnd_toStartOf="@id/players_1_light"
                    app:layout_constraintTop_toTopOf="@+id/players_1_color"
                    app:layout_constraintWidth_percent="0.4" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/players_1_light"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_highlight_black_24dp"
                    android:tint="@color/light_blink_grey"
                    app:layout_constraintBottom_toBottomOf="@+id/players_1_pods"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/players_1_pods" />


                <life.mibo.views.CircleView
                    android:id="@+id/players_2_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/grid_2x"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/players_1_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/players_2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_2x"
                    android:text="Player 2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/players_2_color"
                    app:layout_constraintStart_toEndOf="@+id/players_2_color"
                    app:layout_constraintTop_toTopOf="@id/players_2_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/players_2_pods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableStart="@drawable/ic_rxl_pods_icon"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="@dimen/grid_1x"
                    android:text="4"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/players_2_color"
                    app:layout_constraintEnd_toStartOf="@id/players_2_light"
                    app:layout_constraintTop_toTopOf="@+id/players_2_color"
                    app:layout_constraintWidth_percent="0.4" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/players_2_light"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_highlight_black_24dp"
                    android:tint="@color/light_blink_grey"
                    app:layout_constraintBottom_toBottomOf="@+id/players_2_pods"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/players_2_pods" />


                <life.mibo.views.CircleView
                    android:id="@+id/players_3_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/grid_2x"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/players_2_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/players_3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_2x"
                    android:text="Player 3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/players_3_color"
                    app:layout_constraintStart_toEndOf="@+id/players_3_color"
                    app:layout_constraintTop_toTopOf="@id/players_3_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/players_3_pods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableStart="@drawable/ic_rxl_pods_icon"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="@dimen/grid_1x"
                    android:text="4"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/players_3_color"
                    app:layout_constraintEnd_toStartOf="@id/players_3_light"
                    app:layout_constraintTop_toTopOf="@+id/players_3_color"
                    app:layout_constraintWidth_percent="0.4" />

                <ImageView
                    android:id="@+id/players_3_light"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_highlight_black_24dp"
                    android:tint="@color/light_blink_grey"
                    app:layout_constraintBottom_toBottomOf="@+id/players_3_pods"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/players_3_pods" />

                <life.mibo.views.CircleView
                    android:id="@+id/players_4_color"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/grid_2x"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/players_3_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/players_4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/grid_2x"
                    android:text="Player 4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/players_4_color"
                    app:layout_constraintStart_toEndOf="@+id/players_4_color"
                    app:layout_constraintTop_toTopOf="@id/players_4_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/players_4_pods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableStart="@drawable/ic_rxl_pods_icon"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="@dimen/grid_1x"
                    android:text="4"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/players_4_color"
                    app:layout_constraintEnd_toStartOf="@id/players_4_light"
                    app:layout_constraintTop_toTopOf="@+id/players_4_color"
                    app:layout_constraintWidth_percent="0.4" />

                <ImageView
                    android:id="@+id/players_4_light"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_highlight_black_24dp"
                    android:tint="@color/light_blink_grey"
                    app:layout_constraintBottom_toBottomOf="@+id/players_4_pods"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/players_4_pods" />


                <androidx.constraintlayout.widget.Group
                    android:id="@+id/groupPlayer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="players_1_name,players_1_color,players_1_pods,players_1_light"
                    app:layout_constraintTop_toTopOf="@id/players_1_color" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/groupPlayer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="players_2_name,players_2_color,players_2_pods,players_2_light"
                    app:layout_constraintTop_toTopOf="@id/players_2_color" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/groupPlayer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="players_3_name,players_3_color,players_3_pods,players_3_light"
                    app:layout_constraintTop_toTopOf="@id/players_3_color" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/groupPlayer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="players_4_name,players_4_color,players_4_pods,players_4_light"
                    app:layout_constraintTop_toTopOf="@id/players_4_color" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_required_pods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/assigned_pods"
                    android:textColor="@color/error_message_color"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/players_4_color" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_2x"
                android:layout_marginTop="@dimen/grid_2x"
                android:text="@string/activity_settings"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintPlayer"
                app:layout_constraintWidth_percent="1" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_customize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/grid_2x"
                android:text="@string/customize"
                android:textColor="@color/colorDeviceColorRed"
                android:textSize="@dimen/text_size_medium"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/tv_activity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_activity" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="@dimen/grid_1x"
                android:paddingBottom="@dimen/grid_2x"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity"
                app:layout_constraintWidth_percent="0.48">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/duration"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_duration"
                    app:layout_constraintStart_toStartOf="@+id/iv_duration"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_duration"
                    style="@style/rxl_create_icon"
                    android:paddingEnd="@dimen/grid_2x"
                    android:src="@drawable/ic_reflex_time"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_duration" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center"
                    android:minWidth="64dp"
                    android:padding="@dimen/grid_1x"
                    android:singleLine="true"
                    android:text="@string/_1_sec"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/iv_duration"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_duration" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_cycles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/cycles"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_lights"
                    app:layout_constraintStart_toStartOf="@+id/iv_lights"
                    app:layout_constraintTop_toBottomOf="@id/iv_duration" />

                <ImageView
                    android:id="@+id/iv_lights"
                    style="@style/rxl_create_icon"
                    android:paddingEnd="@dimen/grid_2x"
                    android:src="@drawable/ic_reflex_cycles"
                    app:layout_constraintEnd_toEndOf="@+id/iv_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cycles" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_cycles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center"
                    android:minWidth="64dp"
                    android:padding="@dimen/grid_1x"
                    android:text="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/iv_lights"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_lights" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/grid_2x"
                android:layout_marginBottom="@dimen/grid_1x"
                android:paddingBottom="@dimen/grid_2x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity"
                app:layout_constraintWidth_percent="0.5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/pause"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_pause"
                    app:layout_constraintStart_toStartOf="@+id/iv_pause"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_pause"
                    style="@style/rxl_create_icon"
                    android:src="@drawable/ic_rxl_pause"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_pause"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pause" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:gravity="center"
                    android:minWidth="76dp"
                    android:padding="@dimen/grid_1x"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/iv_pause"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_pause" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/action"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_action"
                    app:layout_constraintStart_toStartOf="@+id/iv_action"
                    app:layout_constraintTop_toBottomOf="@id/iv_pause" />

                <ImageView
                    android:id="@+id/iv_action"
                    style="@style/rxl_create_icon"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_action"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_action" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:gravity="center"
                    android:minWidth="76dp"
                    android:padding="@dimen/grid_1x"
                    android:singleLine="true"
                    android:text="1 sec"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/iv_action"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_action" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/delay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/iv_delay"
                    app:layout_constraintStart_toStartOf="@+id/iv_delay"
                    app:layout_constraintTop_toBottomOf="@id/iv_action" />

                <ImageView
                    android:id="@+id/iv_delay"
                    style="@style/rxl_create_icon"
                    android:src="@drawable/ic_reflex_delay"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_delay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_delay" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:gravity="center"
                    android:minWidth="76dp"
                    android:padding="@dimen/grid_1x"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/iv_delay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_delay" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/constraint_bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_2x"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout6"
                app:layout_constraintWidth_percent="0.8">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_start_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_reflex_state"
                    android:text="@string/start_now"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_start_hit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:background="@drawable/bg_button_reflex_state"
                    android:text="@string/start_on_hint"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/constraint_bottom_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_2x"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout6"
                app:layout_constraintWidth_percent="0.8">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_pause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_reflex_state"
                    android:enabled="true"
                    android:text="@string/pause"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:background="@drawable/bg_button_reflex_state"
                    android:text="@string/stop"
                    android:textColor="@color/white" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>