                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_players"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/players"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_players"
                    app:layout_constraintStart_toStartOf="@+id/iv_players"
                    app:layout_constraintTop_toBottomOf="@id/tv_select_cycles" />

                <ImageView
                    android:id="@+id/iv_players"
                    style="@style/rxl_create_icon"
                    android:src="@drawable/ic_reflex_user"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_players"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_players" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_players"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:padding="@dimen/grid_1x"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/iv_players"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_players" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity"
                app:layout_constraintWidth_percent="0.5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="Action"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_pause"
                    app:layout_constraintStart_toStartOf="@+id/iv_pause"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_pause"
                    style="@style/rxl_create_icon"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_action"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pause" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:minWidth="76dp"
                    android:padding="@dimen/grid_1x"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/iv_pause"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_pause" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/pause"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_pause"
                    app:layout_constraintStart_toStartOf="@+id/iv_delay"
                    app:layout_constraintTop_toBottomOf="@id/iv_pause" />

                <ImageView
                    android:id="@+id/iv_delay"
                    style="@style/rxl_create_icon"
                    android:src="@drawable/ic_reflex_delay"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_delay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_delay" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:minWidth="76dp"
                    android:padding="@dimen/grid_1x"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/iv_delay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_delay" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_2x"
                    android:text="@string/duration"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_action"
                    app:layout_constraintStart_toStartOf="@+id/iv_action"
                    app:layout_constraintTop_toBottomOf="@id/tv_select_delay" />

                <ImageView
                    android:id="@+id/iv_action"
                    style="@style/rxl_create_icon"
                    android:layout_marginEnd="1dp"
                    android:src="@drawable/ic_reflex_time"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_duration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_action" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:minWidth="100dp"
                    android:padding="@dimen/grid_1x"
                    android:singleLine="true"
                    android:text="30 sec"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@id/iv_action"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_action" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1x"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout">

                <!--                <life.mibo.views.FluidSlider-->
