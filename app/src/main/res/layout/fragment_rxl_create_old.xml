                    app:layout_constraintTop_toBottomOf="@id/iv_pods" />

                <ImageView
                    android:id="@+id/iv_lights"
                    style="@style/rxl_create_icon"
                    android:src="@drawable/ic_reflex_cycles"
                    app:layout_constraintEnd_toStartOf="@+id/tv_select_cycles"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_lights" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_select_cycles"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edittext"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                    android:padding="@dimen/grid_1x"
