<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="false">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grid_2x"
        android:text="Select Filters"
        android:textColor="@color/textColorApp"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2x"
        android:layout_marginEnd="@dimen/grid_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <TextView
            android:id="@+id/tv_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Program Types"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_types">

            <RadioButton
                android:id="@+id/radio_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workouts" />

            <RadioButton
                android:id="@+id/radio_circuits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circuits" />

        </RadioGroup>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_ems_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/grid_1x"
            android:text="EMS INCLUDE     "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radio_group" />

        <ImageView
            android:id="@+id/island_image"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginTop="@dimen/grid_1x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switch_ems_"
            app:layout_constraintWidth_percent="0.3" />

        <TextView
            android:id="@+id/tv_island_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_roboto_medium"
            android:text="Program Types"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_island_tile"
            app:layout_constraintStart_toEndOf="@id/island_image"
            app:layout_constraintTop_toTopOf="@id/island_image" />

        <TextView
            android:id="@+id/tv_island_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_roboto"
            android:text="Program Types"
            android:textColor="@color/textColor2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/island_image"
            app:layout_constraintStart_toEndOf="@id/island_image"
            app:layout_constraintTop_toBottomOf="@id/tv_island_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1x"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@string/font_roboto_medium"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/iv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@string/font_roboto_medium"
            android:text="@string/apply"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>