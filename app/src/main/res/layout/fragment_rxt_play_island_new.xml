<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.halilibo.bvpkotlin.BetterVideoPlayer
                android:id="@+id/player"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_black"
                android:gravity="center"
                android:text="05:00"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player" />

            <TextView
                android:id="@+id/tv_program_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:gravity="center"
                android:text="Block 1 - Cycle 1"
                android:textColor="@color/textColor2"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_timer" />
            <TextView
                android:id="@+id/tv_block_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:gravity="center"
                android:text="Block 1 - Cycle 1"
                android:textColor="@color/textColor2"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_program_info" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_block_info" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto"
                android:textColor="@color/textColor2"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/check_voice_prompt" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_block"
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerView">

                <TextView
                    android:id="@+id/tv_blocks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/grid_1x"
                    android:fontFamily="@string/font_roboto"
                    android:text="Blocks"
                    android:textColor="@color/textColor2"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_blocks"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/iv_island"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_desc"
                app:layout_constraintWidth_percent="0.25" />

            <TextView
                android:id="@+id/tv_island_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto"
                android:gravity="bottom"
                android:text="text"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_island_tiles"
                app:layout_constraintEnd_toStartOf="@+id/color_picker"
                app:layout_constraintStart_toEndOf="@id/iv_island"
                app:layout_constraintTop_toTopOf="@id/iv_island" />

            <TextView
                android:id="@+id/tv_island_tiles"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto"
                android:text="text"
                android:textColor="@color/textColor2"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_island"
                app:layout_constraintEnd_toStartOf="@+id/color_picker"
                app:layout_constraintStart_toEndOf="@id/iv_island"
                app:layout_constraintTop_toBottomOf="@id/tv_island_name" />

            <life.mibo.views.CircleView
                android:id="@+id/color_picker"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/grid_2x"
                app:cv_color="@color/colorAccent"
                app:cv_border_color="#ddd"
                app:cv_border_width="1dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_island"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_island" />


            <CheckBox
                android:id="@+id/check_voice_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:buttonTint="@color/colorPrimary"
                android:text="@string/voice_prompt"
                android:textColor="@color/textColor"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_island" />

            <ProgressBar
                android:id="@+id/mediaPlayer_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:max="100"
                android:min="1"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/check_voice_prompt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/check_voice_prompt"
                app:layout_constraintTop_toTopOf="@id/check_voice_prompt" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1x"
        android:text="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <life.mibo.views.PlayButton
            android:id="@+id/btn_play"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_minus_main" />

            <TextView
                android:id="@+id/tv_plus_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:text="1.0"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/ic_plus_main" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>