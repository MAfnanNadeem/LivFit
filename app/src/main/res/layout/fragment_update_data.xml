<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_fname"
            style="@style/TextInputLayoutStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="@dimen/grid_1x">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/first_name_hint"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/grid_4dp"
            android:background="@color/grey" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_lname"
            style="@style/TextInputLayoutStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="@dimen/grid_1x">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name_hint"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/grid_4dp"
            android:background="@color/grey" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_email_frame"
            style="@style/TextInputLayoutStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="@dimen/grid_1x">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/grid_4dp"
            android:background="@color/grey" />


        <TextView
            android:id="@+id/tv_gender1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/grid_2x"
            android:fontFamily="@string/font_roboto_regular"
            android:text="@string/dob_hint"
            android:textColor="@color/grey_888"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_gender2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@string/font_roboto_regular"
            android:padding="12dp"
            android:text="@string/select_gender_hint"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/grid_4dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/tv_dob1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/grid_2x"
            android:fontFamily="@string/font_roboto_regular"
            android:text="@string/dob_hint"
            android:textColor="@color/grey_888"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_dob2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@string/font_roboto_regular"
            android:padding="12dp"
            android:text="@string/select_dob_hint"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/grid_4dp"
            android:background="@color/grey" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_city_frame"
            style="@style/TextInputLayoutStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="@dimen/grid_1x">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1x"
                android:hint="@string/city_hint"
                android:lines="1"
                android:padding="@dimen/grid_2x"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_medium"
                tools:text="@string/dummy_name" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/grid_4dp"
            android:background="@color/grey" />


        <TextView
            android:id="@+id/tv_country1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="@dimen/grid_2x"
            android:fontFamily="@string/font_roboto_regular"
            android:text="@string/country_hint"
            android:textColor="@color/grey_888"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_country2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@string/font_roboto_regular"
            android:padding="12dp"
            android:text="@string/select_country_hint"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/grid_4dp"
            android:background="@color/grey" />

        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
            android:id="@+id/ccp_country"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:ccp_clickable="true"
            app:ccp_defaultCode="971"
            app:ccp_dialogTextColor="@color/textColor"
            app:ccp_hideNameCode="true"
            app:ccp_showFullName="false"
            app:ccp_textColor="@color/textColor" />
    </LinearLayout>

</ScrollView>
