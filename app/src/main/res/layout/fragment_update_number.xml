<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/grid_3x">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_your_mobile_number"
            android:textColor="@color/textColorApp"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="@dimen/grid_4x"
            android:src="@drawable/ic_register_otp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_2x"
            android:text="@string/otp_hint"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_2x"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/grid_1x">

            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                android:id="@+id/ccp_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_corner"
                android:padding="8dp"
                app:ccp_clickable="true"
                app:ccp_defaultNameCode="AE"
                app:ccp_dialogTextColor="@color/textColor"
                app:ccp_selectionDialogShowSearch="true"
                app:ccp_showFlag="true"
                app:ccp_showFullName="false"
                app:ccp_textColor="@color/textColor" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_number"
                style="@style/login_edittext"
                android:layout_width="match_parent"
                android:background="@drawable/bg_edittext_corner"
                android:hint="@string/phone_number_hint"
                android:inputType="phone"
                android:maxLength="12">

                <requestFocus />

            </androidx.appcompat.widget.AppCompatEditText>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
