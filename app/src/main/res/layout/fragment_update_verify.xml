<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/grid_2x"
        android:layout_marginEnd="@dimen/grid_2x"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/grid_3x"
        app:layout_constraintBottom_toTopOf="@id/btn_verify_otp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info2">


        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_register_otp_sent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_2x"
            android:text="@string/enter_your_otp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/grid_2x"
            android:text="@string/we_have_sent_otp_email"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_small" />

        <life.mibo.views.OtpEditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/grid_2x"
            android:clickable="false"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:padding="8dp"
            android:textAlignment="center"
            android:textSize="30sp"
            app:oev_box_style="rounded_box"
            app:oev_length="4"
            app:oev_mask_character="****"
            app:oev_primary_color="@color/colorAccent"
            app:oev_secondary_color="@color/colorPrimary"
            app:oev_text_color="@color/textColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1x"
                android:padding="@dimen/grid_1x"
                android:text="@string/resend_otp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_resend_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:padding="@dimen/grid_1x"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
