<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_1x"
        android:layout_marginTop="@dimen/grid_12dp"
        android:fontFamily="@string/font_roboto_medium"
        android:padding="@dimen/grid_1x"
        android:text="Text"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_medium"
        android:visibility="gone" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_1x"
        android:layout_marginEnd="@dimen/grid_1x"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_single"
            style="@style/MyAccountTitle"
            android:background="@drawable/bg_my_account" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_top"
            style="@style/MyAccountTitle"
            android:background="@drawable/bg_my_account_top" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_middle"
            style="@style/MyAccountTitle"
            android:background="@drawable/bg_my_account_middle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_bottom"
            style="@style/MyAccountTitle"
            android:background="@drawable/bg_my_account_bottom" />
    </LinearLayout>


</LinearLayout>
