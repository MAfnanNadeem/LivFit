<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_1x"
    android:padding="@dimen/grid_1x"
    android:gravity="center_horizontal">


    <life.mibo.views.HexagonImageView
        android:id="@+id/iv_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="@dimen/grid_1x"
        android:src="@drawable/ic_user_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/grid_1x"
        android:layout_marginEnd="@dimen/grid_1x"
        android:fontFamily="@string/font_roboto_medium"
        android:lines="1"
        android:textColor="@color/textColorApp"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_1x"
        android:fontFamily="@string/font_sans_serif"
        android:text="@string/quantity"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="@+id/ll_quantity"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="@+id/ll_quantity" />


    <LinearLayout
        android:id="@+id/ll_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1x"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_product_quantity"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_round_button"
            android:fontFamily="@string/font_roboto_black"
            android:minWidth="0dp"
            android:text="-"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_product_quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/font_roboto_medium"
            android:paddingStart="@dimen/grid_1x"
            android:paddingEnd="@dimen/grid_1x"
            android:text="1"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_round_button"
            android:fontFamily="@string/font_roboto_black"
            android:layout_margin="2dp"
            android:minWidth="0dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1x"
        android:fontFamily="@string/font_sans_serif"
        android:text="@string/price"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/ll_quantity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1x"
        android:fontFamily="@string/font_roboto_medium"
        android:text="@string/price"
        android:textColor="@color/textColorApp"
        app:layout_goneMarginBottom="@dimen/grid_1x"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_quantity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1x"
        android:fontFamily="@string/font_sans_serif"
        android:text="@string/vat_tax"
        android:textColor="@color/textColor"
        android:visibility="gone"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_tax_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1x"
        android:fontFamily="@string/font_roboto_medium"
        android:text="@string/price"
        android:textColor="@color/textColorApp"
        android:visibility="gone"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_price_value" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_1x"
        android:fontFamily="@string/font_sans_serif"
        android:text="@string/total"
        android:visibility="gone"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_tax" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_product_tax_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/grid_1x"
        android:fontFamily="@string/font_roboto_medium"
        android:text="@string/price"
        android:textColor="@color/textColorApp"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_tax_value" />

</androidx.constraintlayout.widget.ConstraintLayout>
