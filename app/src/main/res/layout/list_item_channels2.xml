<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center_horizontal">


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/channel_6_item_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.80" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_device"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_channel_glutes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_perc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2x"
        android:background="@drawable/channel_6_timer_bg"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="100%"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/iv_device"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/grid_2x"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_perc_main_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_ch6_plus_minus_bg"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="20%"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_plus"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_minus"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_height="@dimen/ch_6_list_item_button"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitEnd"
            android:layout_marginStart="@dimen/grid_1x"
            android:src="@drawable/ic_minus_hexa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_perc_main_channel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4" />

        <ImageButton
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_height="@dimen/ch_6_list_item_button"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/button_minus"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/ic_plus_hexa"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/grid_1x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_perc_main_channel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <life.mibo.views.PlayButton
        android:id="@+id/button_start"
        android:layout_width="0dp"
        android:layout_height="@dimen/ch_6_list_item_button"
        android:layout_marginStart="@dimen/grid_1x"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/img_play_hexa"
        android:translationX="-8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>
