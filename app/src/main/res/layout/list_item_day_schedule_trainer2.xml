<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/grid_1x"
    app:cardCornerRadius="@dimen/grid_1x">

    <FrameLayout
        android:id="@+id/parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/grid_1x"
            android:paddingEnd="@dimen/grid_1x">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:gravity="start"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/text_size_medium"
                app:fontFamily="@string/font_sans_serif"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="12:34" />

            <RelativeLayout
                android:id="@+id/rl_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grid_1x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_text">

                <life.mibo.views.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    tools:src="@drawable/ic_user_female" />

                <LinearLayout
                    android:id="@+id/ll_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imageView"
                    android:orientation="vertical"
                    android:padding="@dimen/grid_1x">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/grid_1x"
                        android:layout_marginEnd="@dimen/grid_1x"
                        android:fontFamily="@string/font_roboto_medium"
                        android:padding="2dp"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="visible"
                        tools:text="Trainer" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/grid_1x"
                        android:layout_marginEnd="@dimen/grid_1x"
                        android:fontFamily="@string/font_sans_serif"
                        android:padding="2dp"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="visible"
                        tools:text="Service" />
                </LinearLayout>


            </RelativeLayout>


            <View
                android:id="@+id/viewStarted"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:background="@color/colorDeviceColorGreen"
                app:layout_constraintBottom_toBottomOf="@id/tv_end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_layout" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:gravity="start"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/text_size_medium"
                app:fontFamily="@string/font_sans_serif"
                app:layout_constraintStart_toEndOf="@id/viewStarted"
                app:layout_constraintTop_toTopOf="@id/viewStarted"
                tools:text="Start: 12:35" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1x"
                android:layout_marginBottom="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:gravity="start"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/text_size_medium"
                app:fontFamily="@string/font_sans_serif"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/viewStarted"
                app:layout_constraintTop_toBottomOf="@id/tv_start"
                tools:text="End:   12:45" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/grid_1x"
                android:layout_marginStart="@dimen/grid_1x"
                android:layout_marginBottom="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto"
                android:gravity="start"
                android:textColor="@color/textColorApp2"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"
                app:fontFamily="@string/font_sans_serif"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/completed" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_ddd"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


</androidx.cardview.widget.CardView>

