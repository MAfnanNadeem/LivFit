<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/device_list_item_bg"
    android:gravity="center_horizontal"
    android:padding="@dimen/grid_1x">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_device"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/grid_1x"
        android:background="@drawable/ic_dashboard_booster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:text="Device Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iv_device"
        app:layout_constraintTop_toTopOf="@+id/iv_device" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_deviceMac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:text="Device Address "
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_device"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
        app:layout_constraintStart_toEndOf="@+id/iv_device"
        app:layout_constraintTop_toBottomOf="@+id/tv_deviceName" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/grid_1x"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bl"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bluetooth_black_24dp"
            android:tint="@color/grey" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_wifi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_wifi_black_24dp"
            android:tint="@color/grey" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_battery"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:layout_marginStart="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_battery_40" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_connect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/grey_ddd" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_disconnect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cancel_circle"
            android:tint="@color/grey" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
