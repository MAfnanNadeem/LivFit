<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_1x"
    android:gravity="center_horizontal"
    app:cardCornerRadius="@dimen/grid_1x">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/grid_1x">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_info"
            style="@style/textview_item_rxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_1x"
            android:layout_marginTop="@dimen/grid_1x"
            android:fontFamily="@string/font_sans_serif_medium"
            android:gravity="start"
            android:lines="1"
            android:text="@string/professional_name"
            android:textColor="@color/textColorApp"
            android:textSize="@dimen/text_size_medium" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_info1"
            style="@style/textview_item_rxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:layout_marginStart="@dimen/grid_1x"
            android:fontFamily="@string/font_sans_serif"
            android:gravity="start"
            android:lines="1"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_info2"
            style="@style/textview_item_rxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:layout_marginStart="@dimen/grid_1x"
            android:fontFamily="@string/font_sans_serif"
            android:gravity="start"
            android:lines="2"
            android:text="Basic Info"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_info3"
            style="@style/textview_item_rxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_1x"
            android:layout_marginStart="@dimen/grid_1x"
            android:fontFamily="@string/font_sans_serif"
            android:gravity="start"
            android:lines="1"
            android:text="00"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/text_size_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_paid"
            style="@style/textview_item_rxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/grid_1x"
            android:fontFamily="@string/font_sans_serif_medium"
            android:gravity="start"
            android:visibility="gone"
            android:lines="1"
            android:text="@string/unpaid"
            android:textColor="@color/textColorApp2"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

</androidx.cardview.widget.CardView>

