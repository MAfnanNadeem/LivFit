<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_1x"
    android:gravity="center_horizontal"
    app:cardCornerRadius="@dimen/grid_1x">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/grid_1x"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_roboto"
                android:gravity="start"
                android:lines="1"
                android:text="2011"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/text_size_small" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_roboto_black"
                android:gravity="start"
                android:lines="1"
                android:text="00"
                android:textColor="@color/textColorApp2"
                android:textSize="@dimen/text_size_large" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_roboto"
                android:gravity="start"
                android:lines="1"
                android:text="Jan"
                android:textColor="@color/textColor2"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/grid_1x"
            android:paddingEnd="@dimen/grid_1x"
            android:paddingBottom="@dimen/grid_1x">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                style="@style/textview_item_rxl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1x"
                android:fontFamily="@string/font_roboto_medium"
                android:gravity="start"
                android:lines="1"
                android:text="@string/professional_name"
                android:textColor="@color/textColorApp"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1x"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/textview_item_rxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/order_"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_order"
                    style="@style/textview_item_rxl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@string/font_sans_serif"
                    android:gravity="start"
                    android:lines="1"
                    android:text="Order#"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/grid_1x"
                android:layout_marginTop="@dimen/grid_1x"
                android:layout_marginEnd="@dimen/grid_1x">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_quantity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/quantity"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_quantity"
                    style="@style/textview_item_rxl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_roboto_medium"
                    android:gravity="end"
                    android:lines="2"
                    android:text="1"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/sub_total_"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_quantity_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price"
                    style="@style/textview_item_rxl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_roboto_medium"
                    android:gravity="end"
                    android:lines="2"
                    android:text="1"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_price_title" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_vat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/vat_tax"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_price" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_vat"
                    style="@style/textview_item_rxl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_roboto_medium"
                    android:gravity="end"
                    android:lines="2"
                    android:text="1"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_vat_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_sans_serif"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/total"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_vat_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_total"
                    style="@style/textview_item_rxl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_roboto_medium"
                    android:gravity="end"
                    android:lines="2"
                    android:text="1"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_total_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/grid_1x"
                    android:fontFamily="@string/font_sans_serif"
                    android:gravity="start"
                    android:lines="1"
                    android:text="@string/payment_status"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_paid"
                    style="@style/textview_item_rxl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_roboto_medium"
                    android:gravity="end"
                    android:lines="2"
                    android:textColor="@color/textColorApp2"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_status_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>

