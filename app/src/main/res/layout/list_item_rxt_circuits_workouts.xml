<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/background_color_app">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2x"
        android:layout_marginTop="@dimen/grid_2x"
        android:fontFamily="@string/font_roboto_black"
        android:text="Name "
        android:textColor="@color/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_block_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_2x"
        android:layout_marginTop="@dimen/grid_1x"
        android:fontFamily="@string/font_roboto"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_1x"
        android:layout_marginBottom="@dimen/grid_1x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_block_name">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext"
            android:drawableStart="@drawable/ic_action_time_24"
            android:drawablePadding="@dimen/grid_1x"
            android:drawableTint="@color/textColorGreen"
            android:gravity="center"
            android:minWidth="64dp"
            android:padding="@dimen/grid_1x"
            android:singleLine="true"
            android:text="@string/_1_sec"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toStartOf="@+id/tv_action"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="@dimen/grid_1x"
            android:drawableTint="@color/textColorGreen"
            android:gravity="center"
            android:minWidth="64dp"
            android:padding="@dimen/grid_1x"
            android:singleLine="true"
            android:text="@string/_1_sec"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toStartOf="@+id/tv_delay"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_duration"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext"
            android:drawableStart="@drawable/ic_pause_circle_24"
            android:drawablePadding="@dimen/grid_1x"
            android:drawableTint="@color/textColorGreen"
            android:gravity="center"
            android:minWidth="64dp"
            android:padding="@dimen/grid_1x"
            android:singleLine="true"
            android:text="@string/_1_sec"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toStartOf="@+id/tv_rounds"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_action"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_rounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_edittext"
            android:drawableStart="@drawable/ic_repeat_24"
            android:drawablePadding="@dimen/grid_1x"
            android:drawableTint="@color/textColorGreen"
            android:gravity="center"
            android:minWidth="64dp"
            android:padding="@dimen/grid_1x"
            android:singleLine="true"
            android:text="@string/_1_sec"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_delay"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>