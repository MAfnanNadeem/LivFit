<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_1x">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edittext_corner"
        android:padding="@dimen/grid_1x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_1x"
            android:layout_marginTop="@dimen/grid_2x"
            android:fontFamily="@string/font_roboto_black"
            android:text="Island Name"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/grid_1x"
            android:padding="@dimen/grid_2x"
            android:text="Tiles:  17"
            android:textColor="@color/textColor2"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />


        <LinearLayout
            android:id="@+id/btn_check"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tiles">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/btn_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:checked="false"
                android:clickable="false"
                android:enabled="false"
                android:padding="0dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/btn_program"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mibo_reflex"
            android:text="Select Program"
            app:layout_constraintEnd_toStartOf="@id/btn_color"
            app:layout_constraintStart_toEndOf="@id/btn_check"
            app:layout_constraintTop_toBottomOf="@id/tv_tiles" />

        <life.mibo.views.CircleView
            android:id="@+id/btn_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minHeight="0dp"
            app:cv_border="true"
            app:cv_border_color="@color/colorPrimary"
            app:cv_border_width="1dp"
            app:cv_color="@color/colorDeviceColorRed"
            app:layout_constraintEnd_toStartOf="@id/btn_test"
            app:layout_constraintStart_toEndOf="@id/btn_program"
            app:layout_constraintTop_toBottomOf="@id/tv_tiles" />

        <ImageView
            android:id="@+id/btn_test"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minHeight="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play_hexa"
            android:text="Test"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tiles" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_user_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>