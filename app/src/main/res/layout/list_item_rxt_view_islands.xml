<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_roboto_black"
        android:padding="@dimen/grid_1x"
        android:text="Island Name"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/imageViewPlay"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tiles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_roboto"
        android:paddingStart="@dimen/grid_1x"
        android:paddingEnd="@dimen/grid_1x"
        android:paddingTop="@dimen/grid_1x"
        android:text="Island Name"
        android:textColor="@color/textColor2"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_tiles_no"
        app:layout_constraintEnd_toStartOf="@id/imageViewPlay"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_tiles_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_roboto"
        android:padding="@dimen/grid_1x"
        android:text="Island Name"
        android:textColor="@color/textColor2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageViewPlay"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toBottomOf="@id/tv_tiles" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_user_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_play_hexa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>