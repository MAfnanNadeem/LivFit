<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_muscle"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_channel_glutes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_minus"
        android:layout_width="59dp"
        android:layout_height="@dimen/ch_6_list_item_button"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_minus_hexa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_perc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_muscle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/et_perc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/channel_6_timer_bg"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="@dimen/grid_1x"
        android:text="25 %"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_minus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_plus"
        android:layout_width="0dp"
        android:layout_height="@dimen/ch_6_list_item_button"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/button_minus"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_plus_hexa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_perc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15" />


</androidx.constraintlayout.widget.ConstraintLayout>
